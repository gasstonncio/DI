    <!-- Campo para cambiar contrase침a -->
    <EditText
        android:id="@+id/newPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nueva contrase침a"
        android:inputType="textPassword"/>

    <Button
